#!/bin/sh
# config script for libpam-slurm
#
# see: dh_installdeb(1)

set -e

. /usr/share/debconf/confmodule

# summary of how this script can be called:
#        * <config> `configure' <installed-version>
#        * <config> `reconfigure' <installed-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

case "$1" in
    configure|reconfigure)

        PAM_CONFIG=/usr/share/pam-configs/slurm

        db_input low libpam-slurm/enable || true
        db_go || true
        db_get libpam-slurm/enable

        if [ "$RET" = "true" ]; then
          sed -i "s/^Default:.*\$/Default: yes/" "$PAM_CONFIG"
        else
          sed -i "s/^Default:.*\$/Default: no/" "$PAM_CONFIG"
        fi

    ;;

    *)
        echo "config script called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
